<Window x:Class="Othello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Resources/wooden_back.jpg" />
    </Window.Background>
    <!-- MAIN PROGRAM -->
    <StackPanel x:Name="main_panel" HorizontalAlignment="Center" VerticalAlignment="Top">
        <!-- MENU : main panel  : vertical -->
        <StackPanel x:Name="menu_main_panel" Height="30" VerticalAlignment="Top"/>
        <!-- BLACK : main panel : vertical -->
        <StackPanel x:Name="b_main_panel" Height="70" Orientation="Horizontal"  HorizontalAlignment="Center" VerticalAlignment="Top">
            <!-- INFORMATION : chrono + score -->
            <StackPanel x:Name="b_info" Height="70" Width="300" Orientation="Horizontal" HorizontalAlignment="Left" Background="Gray">
                <!-- chrono -->
                <StackPanel x:Name="b_chrono" Height="35" Width="300" Orientation="Vertical" VerticalAlignment="Top" Background="MediumAquamarine">
                    <Label x:Name="black_label" Content="{Binding BlackTimerStr}"
                           HorizontalAlignment="Left" VerticalAlignment="Top" 
                           FontFamily="Consolas" FontSize="20">
                        <Label.DataContext>
                            <local:GameData/>
                        </Label.DataContext>
                    </Label>
                </StackPanel>
                <!-- score : BINDing needed -->
                <StackPanel x:Name="b_score" Height="35" Width="300" 
                            Orientation="Vertical" VerticalAlignment="Top" 
                            Background="MediumSeaGreen"/>
            </StackPanel>
            <!-- REMAINING DISCS -->
            <StackPanel x:Name="b_discs" Height="70" Width="320" 
                        Orientation="Horizontal" HorizontalAlignment="Right" 
                        Background="LightGray">
                
            </StackPanel>
        </StackPanel>
        <!-- BOARD : main panel : vertical -->
        <StackPanel x:Name="bo_main_panel" Height="400" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">

            <!-- BOARD : grid  -->
            <Grid x:Name="board_grid" Height="375" Width="375" 
                  HorizontalAlignment="Center" VerticalAlignment="Center" 
                  Margin="5">
                <Grid.Background>
                    <ImageBrush ImageSource="Resources/reversi_board.png"/>
                </Grid.Background>
            </Grid>
        </StackPanel>
        <!-- WHITE : main panel : vertical -->
        <StackPanel x:Name="w_main_panel" Height="70" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Background="Black">
            <!-- REMAINING DISCS -->
            <StackPanel x:Name="w_discs" Height="70" Width="320" Orientation="Horizontal" HorizontalAlignment="Right" Background="LightGray" RenderTransformOrigin="0.5,0.5">
                
            </StackPanel>
            <!-- INFORMATION : chrono + score -->
            <StackPanel x:Name="w_info" Height="70" Width="300" Orientation="Horizontal" HorizontalAlignment="Left" Background="Gray">
                <!-- chrono -->
                <StackPanel x:Name="w_chrono" Height="35" Width="300" 
                            Orientation="Vertical" VerticalAlignment="Top" 
                            Background="MediumAquamarine">
                    <Label x:Name="white_label" Content="{Binding WhiteTimerStr}"
                           HorizontalAlignment="Right" VerticalAlignment="Top" 
                           FontFamily="Consolas" FontSize="20">
                        <Label.DataContext>
                            <local:GameData/>
                        </Label.DataContext>
                    </Label>
                </StackPanel>
                <!-- score : BINDing needed -->
                <StackPanel x:Name="w_score" Height="35" Width="300" Orientation="Vertical" VerticalAlignment="Top" Background="MediumSeaGreen"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>
