<Window x:Class="Othello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="600" MinWidth="800">
    <Window.Background>
        <ImageBrush ImageSource="Resources/wooden_back.jpg"/>
    </Window.Background>
    <!-- MAIN PROGRAM -->
    <Grid x:Name="main_panel" 
                VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <!-- MENU : main panel  : vertical -->
        <StackPanel x:Name="menu_main_panel" Height="30" 
                    VerticalAlignment="Top"
                    Grid.Row="0"/>
        <!-- BLACK : main panel : vertical -->
        <Grid x:Name="b_main_panel" Height="50" VerticalAlignment="Top"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- INFORMATION : chrono + score -->
            <StackPanel x:Name="b_info" Height="50" 
                        Grid.Column="0"
                        Orientation="Vertical" Background="Gray">
                <!-- CHRONO -->
                <StackPanel x:Name="b_chrono" Height="25" Orientation="Vertical" 
                            VerticalAlignment="Top" Background="MediumAquamarine">
                    <!-- label -->
                    <Label x:Name="black_label" Content="{Binding BlackTimerStr}"
                           HorizontalAlignment="Center" VerticalAlignment="Top" 
                           FontFamily="Consolas" FontSize="20">
                        <Label.DataContext>
                            <local:GameData/>
                        </Label.DataContext>
                    </Label>
                </StackPanel>
                <!-- SCORE -->
                <StackPanel x:Name="b_score" Height="25" 
                            Orientation="Vertical" VerticalAlignment="Top" 
                            Background="MediumSeaGreen">
                    <!-- label -->
                    <Label x:Name="b_score_label" Content="{Binding BlackScoreStr}"
                           HorizontalAlignment="Center" VerticalAlignment="Top" 
                           FontFamily="Consolas" FontSize="20">
                        <Label.DataContext>
                            <local:GameData/>
                        </Label.DataContext>
                    </Label>
                </StackPanel>
            </StackPanel>
            <!-- REMAINING DISCS -->
            <StackPanel x:Name="b_discs" Height="50"
                        Grid.Column="1"
                        Orientation="Horizontal" 
                        Background="LightGray"/>
        </Grid>
        <!-- BOARD : grid  -->
        <Grid x:Name="board_grid" 
              HorizontalAlignment="Center" VerticalAlignment="Center"
              Grid.Row="2">
            <Grid.Background>
                <ImageBrush ImageSource="Resources/reversi_board.png" 
                            Stretch="Uniform"/>
            </Grid.Background>
        </Grid>
        <!-- WHITE : main panel  -->
        <Grid x:Name="w_main_panel" Height="50" VerticalAlignment="Top" 
                    Background="Black"
              Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <!-- REMAINING DISCS -->
            <StackPanel x:Name="w_discs" Height="50" 
                        Grid.Column="0"
                        Orientation="Horizontal" Background="LightGray" 
                        RenderTransformOrigin="0.5,0.5">
                <StackPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="180"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </StackPanel.RenderTransform>
            </StackPanel>
            <!-- INFORMATION : chrono + score -->
            <StackPanel x:Name="w_info" Height="50"
                        Grid.Column="1"
                        Orientation="Vertical" Background="Gray">
                <!-- chrono -->
                <StackPanel x:Name="w_chrono" Height="25" 
                            Orientation="Vertical" VerticalAlignment="Top" 
                            Background="MediumAquamarine">
                    <Label x:Name="white_label" Content="{Binding WhiteTimerStr}" VerticalAlignment="Top" 
                           FontFamily="Consolas" FontSize="20" HorizontalAlignment="Center">
                        <Label.DataContext>
                            <local:GameData/>
                        </Label.DataContext>
                    </Label>
                </StackPanel>
                <!-- SCORE -->
                <StackPanel x:Name="w_score" Height="25" Orientation="Vertical" 
                            VerticalAlignment="Top" 
                            Background="MediumSeaGreen" RenderTransformOrigin="0.5,0.5">
                    <!-- label -->
                    <Label x:Name="w_score_label" Content="{Binding WhiteScoreStr}" VerticalAlignment="Top" 
                           FontFamily="Consolas" FontSize="20" HorizontalAlignment="Center">
                        <Label.DataContext>
                            <local:GameData/>
                        </Label.DataContext>
                    </Label>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
